{
  "type": "Dilemma",
  "dilemmaType": "Planet",
  "cost": 1,
  "title": "Kolaran Raiders",
  "abilities": [
    {
      "text": "Choose a personnel who has Leadership or Security to be stopped. If you cannot, randomly select a personnel to be killed.",
      "type": "dilemmaEffect",
      "effects": [
        {
          "type": "condition",
          "condition": "or(countSkillAtLeast(attemptingPersonnel,Leadership,1),countSkillAtLeast(attemptingPersonnel,Security,1))",
          "trueEffect": {
            "type": "stop",
            "select": "type(Personnel),attemptingPersonnel,or(skill(Leadership),skill(Security))"
          },
          "falseEffect": [
            {
              "type": "randomlySelect",
              "filter": "type(Personnel),attemptingPersonnel",
              "memory": "randomPersonnel"
            },
            {
              "type": "kill",
              "filter": "memory(randomPersonnel)"
            }
          ]
        }
      ]
    }
  ],
  "lore": "\"Isolated pockets of humanoids. It appears to be a pre-warp civilization at an early stage of industrial development.\""
}
