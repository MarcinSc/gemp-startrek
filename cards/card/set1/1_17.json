{
  "type": "Dilemma",
  "dilemmaType": "Space",
  "cost": 1,
  "title": "Command Decisions",
  "abilities": [
    {
      "text": "Choose a personnel who has Leadership or Officer to be stopped. If you cannot, randomly select a personnel to be killed.",
      "type": "dilemmaEffect",
      "effects": [
        {
          "type": "condition",
          "condition": "or(countSkillAtLeast(attemptingPersonnel,Leadership,1),countSkillAtLeast(attemptingPersonnel,Officer,1))",
          "trueEffect": {
            "type": "stop",
            "select": "type(Personnel),attemptingPersonnel,or(skill(Leadership),skill(Officer))"
          },
          "falseEffect": [
            {
              "type": "randomlySelect",
              "filter": "type(Personnel),attemptingPersonnel",
              "memory": "randomPersonnel"
            },
            {
              "type": "kill",
              "filter": "memory(randomPersonnel)"
            }
          ]
        }
      ]
    }
  ],
  "lore": "Although there are as many command styles as there are ships in the fleet, all the best captains share the ability to make quick decisions in a crisis situation."
}
