{
  "type": "Dilemma",
  "dilemmaType": "Dual",
  "cost": 3,
  "title": "Recurring Injury",
  "abilities": [
    {
      "text": "Unless you have a personnel who has 2 Biology or a personnel who has 2 Medical, your opponent chooses an Biology or Medical personnel to be stopped. If your opponent cannot, all your personnel are stopped and this dilemma returns to its owner's dilemma pile.",
      "type": "dilemmaEffect",
      "effects": [
        {
          "type": "condition",
          "condition": "or(countSkillAtLeast(facingDilemma,Biology,2),countSkillAtLeast(facingDilemma,Medical,2))",
          "falseEffect": {
            "type": "condition",
            "condition": "hasCard(facingDilemma,or(skill(Biology),skill(Medical)))",
            "trueEffect": [
              {
                "type": "opponentSelect",
                "filter": "facingDilemma,or(skill(Biology),skill(Medical))",
                "memorize": "selectedCharacter"
              },
              {
                "type": "stop",
                "filter": "memory(selectedCharacter)"
              }
            ],
            "falseEffect": [
              {
                "type": "stop",
                "filter": "facingDilemma,type(personnel)"
              },
              {
                "type": "putDilemmaInDilemmaPile",
                "filter": "self"
              }
            ]
          }
        }
      ]
    }
  ],
  "lore": "\"It’s his shoulder. It’s popped out of his socket.\""
}
