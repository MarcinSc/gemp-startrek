{
  "type": "Dilemma",
  "dilemmaType": "Planet",
  "cost": 2,
  "title": "Authenticate Artifacts",
  "abilities": [
    {
      "text": "Unless you have a personnel who has 2 Anthropology or a personnel who has 2 Archaeology, your opponent chooses an Anthropology or Archaeology personnel to be stopped. If your opponent cannot, all your personnel are stopped and this dilemma returns to its owner's dilemma pile.",
      "type": "dilemmaEffect",
      "effects": [
        {
          "type": "condition",
          "condition": "or(countAtLeast(skill(Anthropology),2),countAtLeast(skill(Archeology),2))",
          "falseEffect": {
            "type": "condition",
            "condition": "onMission(currentMission),or(skill(Anthropology),skill(Archeology))",
            "trueEffect": [
              {
                "type": "opponentSelect",
                "filter": "onMission(currentMission),or(skill(Anthropology),skill(Archeology))",
                "memorize": "selectedCharacter"
              },
              {
                "type": "stop",
                "filter": "memory(selectedCharacter)"
              }
            ],
            "falseEffect": [
              {
                "type": "stop",
                "filter": "onMission(currentMission),type(personnel)"
              },
              {
                "type": "putDilemmaInDilemmaPile",
                "filter": "self"
              }
            ]
          }
        }
      ]
    }
  ],
  "lore": "\"You can tell Baran that I'm working as fast as I can.\""
}
